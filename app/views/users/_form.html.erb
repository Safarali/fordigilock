<%= form_for(@user) do |f| %>
    <div class="form-row">
        <div class="form-group col-md-6">
            <%= f.text_field :first_name, class: "form-control form-control-lg", placeholder: "First name", autofocus: true, required: true %>
        </div>
        <div class="form-group col-md-6">
            <%= f.text_field :last_name, class: "form-control form-control-lg", placeholder: "Last name", required: true %>
        </div>
    </div>
    <div class="form-group">
        <%= f.email_field :email, class: "form-control form-control-lg", placeholder: "Email", required: true %>
    </div>
    <div class="form-group">
        <%= f.password_field :password, class: "form-control form-control-lg", placeholder: "Password"%>
    </div>
    <div class="form-group">
        <%= f.password_field :password_confirmation, class: "form-control form-control-lg", placeholder: "Password confirmation" %>
    </div>
    <%= f.submit yield(:button_text), class: "btn-form" %>
<% end %>
