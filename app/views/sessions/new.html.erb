<% provide(:title, "Sign in") %>
<section class="user-forms">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-4 col-lg-5 col-md-6 col-sm-8">
                <div class="card">
                    <div class="card-body">
                        <h3>Sign in</h3>
                        <%= form_for(:session, url: login_path) do |f| %>
                            <div class="form-group">
                                <%= f.email_field :email, class: "form-control form-control-lg", placeholder: "Email", required: true, autofocus: true %>
                            </div>
                            <div class="form-group">
                                <%= f.password_field :password, class: "form-control form-control-lg", placeholder: "Password", required: true %>
                            </div>
                            <%= f.label :remember_me, class: "checkbox inline" do %>
                                <%= f.check_box :remember_me %>
                                <span class="remember-me">Remember me</span>
                          <% end %>
                            <%= f.submit "Log in", class: "btn-form" %>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
